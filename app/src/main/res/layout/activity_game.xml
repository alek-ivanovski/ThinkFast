<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hyperic.thinkfast.game"
    android:background="#5B5B5B">

    <Button
        android:text="No"
        android:layout_width="160dip"
        android:layout_height="140dip"
        android:id="@+id/no"
        android:textSize="26sp"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:background="@android:color/holo_red_light"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Yes"
        android:layout_width="160dip"
        android:layout_height="140dip"
        android:id="@+id/button"
        android:textColor="@android:color/white"
        android:background="#b0e57c"
        android:textColorHighlight="@android:color/darker_gray"
        android:elevation="11dip"
        android:textSize="26sp"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="60"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:fontFamily="monospace"
        android:textSize="22sp"
        android:textColor="#3292E8"
        android:typeface="monospace"
        android:textStyle="normal|bold"
        android:layout_marginBottom="35dip"
        android:layout_marginTop="120dip"
        android:layout_marginLeft="95dip"
        android:textAlignment="center" />

    <TextView
        android:text="Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:fontFamily="monospace"
        android:typeface="monospace"
        android:textSize="22sp"
        android:textColor="#3292E8"
        android:layout_alignBottom="@+id/time"
        android:layout_marginLeft="20dip"
        android:layout_marginStart="11dip" />

    <TextView
        android:text="Score:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/time"
        android:layout_alignBottom="@+id/time"
        android:layout_alignLeft="@+id/no"
        android:layout_marginLeft="5dp"
        android:layout_alignStart="@+id/no"
        android:fontFamily="monospace"
        android:typeface="monospace"
        android:textColor="#3292E8"
        android:textSize="22sp" />

    <TextView
        android:text="2 + 3 = 5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zad"
        android:fontFamily="serif-monospace"
        android:textSize="60sp"
        android:textStyle="normal|bold"
        android:textColor="#FCD93F"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:clickable="false"
        android:fontFamily="monospace"
        android:textSize="20sp"
        android:textColor="#3292E8"
        android:layout_below="@+id/Score"
        android:layout_marginTop="10dip"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:id="@+id/Score"
        android:textSize="22sp"
        android:textColor="#3292E8"
        android:fontFamily="monospace"
        android:textStyle="normal|bold"
        android:typeface="monospace"
        android:text="0"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />
</RelativeLayout>
